<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 20;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.conversor.conversor.ConversorController">

    <Text style="-fx-font-size: 24; -fx-font-weight: bold;" text="Conversor de Unidades" />

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label style="-fx-font-weight: bold;" text="Tipo de conversiÃ³n:" />
        <ComboBox fx:id="tipoConversion" prefWidth="150" promptText="Peso" />
    </HBox>

    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <Label text="Valor a convertir:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="inputField" text="100" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="De:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <ComboBox fx:id="unidadOrigen" prefWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="A:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <ComboBox fx:id="unidadDestino" prefWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Resultado:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="resultadoField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#convertir" style="-fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white;" text="Convertir" />
        <Button onAction="#limpiar" style="-fx-font-weight: bold; -fx-background-color: #f44336; -fx-text-fill: white;" text="Limpiar" />
    </HBox>

    <TextArea fx:id="historialArea" editable="false" prefHeight="150" prefWidth="400" style="-fx-font-family: monospace;" />

</VBox>
